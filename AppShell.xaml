<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DECouriers.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DECouriers"
    xmlns:pages="clr-namespace:DECouriers.Pages"
    Title="DECouriers"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="SignIn" />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate pages:SignUpView}"
        Route="SignUp" />

    <ShellContent
        Title="Reset Password"
        ContentTemplate="{DataTemplate pages:ResetPasswordView}"
        Route="ResetPassword" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate pages:DashboardView}"
        Route="Dashboard" />
</Shell>
