<?xml version="1.0" encoding="utf-8" ?>
<!--
    This file defines a BusyPopup control, which is a popup containing an ActivityIndicator.
    It is used to indicate that a background task is running and the user should wait.
    The popup cannot be dismissed by tapping outside of it.
-->
<toolkit:Popup
    x:Class="DECouriers.Controls.BusyPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Size="100,100">
    <StackLayout Padding="10">
        <ActivityIndicator
            HorizontalOptions="CenterAndExpand"
            IsRunning="True"
            Scale="2"
            VerticalOptions="CenterAndExpand" />
    </StackLayout>
</toolkit:Popup>
