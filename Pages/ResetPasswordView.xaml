<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DECouriers.Pages.ResetPasswordView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">
    <VerticalStackLayout>
        <Entry Placeholder="Enter Email" Text="{Binding Email}" />
        <Button Command="{Binding ResetPasswordCommand}" Text="Send Reset Password Email" />
    </VerticalStackLayout>
</ContentPage>