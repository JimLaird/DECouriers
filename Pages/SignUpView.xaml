<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DECouriers.Pages.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">
    <VerticalStackLayout>
        <Entry Placeholder="Enter Email" Text="{Binding Email}" />
        <Entry Placeholder="Enter Display Name" Text="{Binding Username}" />
        <Entry
            IsPassword="True"
            Placeholder="Enter Password"
            Text="{Binding Password}" />
        <Button Command="{Binding SignUpCommand}" Text="Sign Up" />
        <Button Command="{Binding NavigateSignInCommand}" Text="Already have an account?  Sign In" />
    </VerticalStackLayout>
</ContentPage>